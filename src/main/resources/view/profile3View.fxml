<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/stylesheet.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Profile3Controller">
    <children>
        <GridPane alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label styleClass="settingsLabel" text="Dark Mode" GridPane.halignment="CENTER">
                </Label>
                <CheckBox fx:id="darkModeBox" onAction="#switchDarkMode" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label styleClass="settingsLabel" text="Font Size" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
                </Label>
                <Button fx:id="smallFontSizeButton" onAction="#setSmallFontSize" mnemonicParsing="false" text="Small" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                </Button>
                <Button fx:id="mediumFontSizeButton" onAction="#setMediumFontSize" mnemonicParsing="false" text="Medium" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                </Button>
                <Button fx:id="bigFontSizeButton" onAction="#setBigFontSize" layoutX="280.0" layoutY="332.0" mnemonicParsing="false" text="Big" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                </Button>
                <Label styleClass="settingsLabel" text="Font Family" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="BOTTOM">
                </Label>
                <Button fx:id="comicSansMSButton" onAction="#setComicSansMSFamily" mnemonicParsing="false" text="Comic Sans MS" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                </Button>
                <Button fx:id="arialButton" onAction="#setArialFamily" layoutX="90.0" layoutY="360.0" mnemonicParsing="false" text="Arial" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                </Button>
                <Button fx:id="timesNewRomanButton" onAction="#setTimesNewRomanFamily" mnemonicParsing="false" text="Times New Roman" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                </Button>
                <Button fx:id="resetToDefaultButton" onAction="#resetToDefault" mnemonicParsing="false" text="Reset To Default" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
                <Button fx:id="submitButton" onAction="#saveCurrentConfiguration" mnemonicParsing="false" styleClass="saveButton" text="Save" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
                <Button fx:id="resetChangesButton" onAction="#resetChanges" mnemonicParsing="false" text="Reset Changes" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
            </children>
        </GridPane>
    </children>
</AnchorPane>
